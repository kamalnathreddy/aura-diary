generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id          String   @id @default(uuid())
  summary     String   @default("") @db.Text
  lastUpdated DateTime @default(now())
}

model Entry {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  content      String
  moodScore    Int
  moodLabel    String
  stressLevel  Int
  productivity Int
  
  // The "Friend" response (Support)
  aiReflection String   
  
  // NEW: Stores the "Master" advice and "Coach" checklist
  analysis     Json?    

  userId       String?  // Prepared for when we add Login later
}